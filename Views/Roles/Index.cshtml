@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Users Roles</h3>
        </div>
    </div>
    <table class="table table-hover" style="width:100%">
        <thead>
            <tr>
                <td scope="col">
                    UserId
                </td> 
                <td scope="col">
                    UserName
                </td> 
                <td scope="col">                  
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="20%">
                        @item.Id
                    </td>
                    <td scope="row" width="50%">
                        @item.UserName
                    </td> 
                    <td scope="row" >
                        <a asp-controller="Roles" asp-action="AddRoles" asp-route-userId="@item.Id" class="btn btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>

    </table>


</div>