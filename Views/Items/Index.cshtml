    @model IEnumerable<Item>
@{
    ViewData["Title"] = "Items";
}

<h1>Items</h1>

<div class="container p-3">
    <partial name="_Notification" />
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Item View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="items" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Item
            </a>

        </div>
    </div>
    <table class="table table-hover" style="width:100%">
        <thead>
            <tr>
                <th scope="col">
                    Item Name
                </th>
                <th scope="col">
                    Item Price
                </th>
                <th scope="col">
                    Category
                </th>
                <th scope="col">
                    Images
                </th>
            </tr>   
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="30%">
                        @item.Name
                    </td>
                    <td scope="row" width="30%">
                        @item.Price $
                    </td> 
                    <td scope="row" width="30%">
                        @item.Category.CategoryName
                    </td>
                    <td scope="row" >
                       <img src="~/Images/@item.ImgPath" class="img-thumbnail" style="width:48px" >
                    </td>
                    <td>
                        <a asp-controller="items" asp-action="Edit" asp-route-Id="@item.Id" class="btn  btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="items" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




