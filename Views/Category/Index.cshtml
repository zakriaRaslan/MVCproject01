@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Category
            </a>

        </div>
    </div>
    <table class="table table-hover" style="width:100%">
        <thead>
            <tr>                
                <th scope="col">
                    Category
                </th> 
                <th scope="col">
         
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="80%">
                        @item.CategoryName
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn  btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




