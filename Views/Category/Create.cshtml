@model Category
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3>Create Category</h3>
            <hr />
            <div asp-validation-summary="All"> 
            </div>
            <div>
                <label asp-for="CategoryName"></label>
                <input class="form-control" asp-for="CategoryName" />
                <span class="text-bg-danger" asp-validation-for="CategoryName" ></span>
            </div>
            <hr />
            <br />
            <button type="submit" class="btn btn-success" style="width:100px">Save</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary" style="width:100px">Back</a>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

